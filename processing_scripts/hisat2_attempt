  # generate exon and splice site file on gtf file
python3 hisat2_extract_exons.py Homo_sapiens.GRCh37.75.gtf > exons.csv
python3 hisat2_extract_splice_sites.p Homo_sapiens.GRCh37.75. > splice_site.csv

