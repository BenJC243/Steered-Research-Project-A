                               print('gene information here')
                             if(choice = CARNS1) 
                               print('gene information here')}

                )
)
        

# Define server logic required to draw a histogram ----
server <- function(input, output, session) {
  
  output$txtout <- renderText({
    paste( input$txt1, input$txt2, sep = " " )
  })
} # server

shinyApp(ui, server)
