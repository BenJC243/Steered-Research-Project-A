      sidebarPanel('Gene Selection'),
        valueBox(#for gene name selection)
        #or
       selectInput('var',
                    label = 'Choose a gene for more information',
                    choices = c('SOX4', 'DCX', 'SOX11', 'BCL11A', 'SLA', 'SLC12A2', 'SLA1A3', 'SLC1A2', 'SPARCL1', 'ATP1B2', 'AQP4', 'PIP4K2A', 'CLDND1', 'TMEM144', 'PLP1', 'SRGN', 'A2M', 'LAPTM5', 'OLR1', 'CD83', 'SCG2', 'GABRA1', 'SYT1', 'ERBB4', 'SNAP25', 'NUSAP1', 'UBE2C', 'SMC4', 'CENPE', 'KPNA2', ' PLEK', 'HAVCR2', 'CD53', 'SPP1', 'LAPTM5', 'CALB2', 'CNTNAP2', 'ERBB4', 'BCL11A', 'SNAP25', ' POU3F2', 'SCG2', 'AASS', 'NUSAP1', 'B2M', 'TACC1', 'SPP1', 'OLR1', 'IFI27', 'B3GNT5', 'APOLD1', 'LAPTM5', 'IFITM1', 'PTPRF', 'PPP2R5A', 'RIMKLB', 'ZNF337', 'ZFY', ' TM9SF3', 'DUSP11', 'LONRF2', 'C1orf43', 'GABRA1', 'IFI27', 'TGM2', 'ABCG2', 'SLC2A1', 'SDPR', 'CRISPLD2', 'ACTA2', 'SYNPO2', 'IMPAD1', 'TAGLN', 'DCN', 'PRELP', 'PTN', 'MFAP4', 'SERPING1', 'IFI27', 'TGM2', 'DDX3Y', 'AKAP12', 'IMPAD1', 'CAV2', 'APOLD1', 'S1PR3', 'PRELP', 'PCOLCE', 'B3GNT2', 'MFAP4'),
